{%- set vector_1 = [32 - 15, 15] %}
{%- set vector_2 = [32 - 30, 30] %}
{%- set vector_list = [vector_1, vector_2] %}

{
    "glob": "**/*.cs",
    "output_dest": [
        {
            "dir_path": "../AgatePris.Intar",
            "template_name": "BitOperations.cs",
            "files": [
                { "file_name": "BitOperations.gen.cs", "params": {} }
            ]
        },
        {
            "dir_path": "../AgatePris.Intar",
            "template_name": "Mathi.cs",
            "files": [
                { "file_name": "Mathi.gen.cs", "params": {} }
            ]
        },
        {
            "dir_path": "../AgatePris.Intar",
            "template_name": "Overflowing.cs",
            "files": [
                { "file_name": "Overflowing.gen.cs", "params": {} }
            ]
        },
        {
            "dir_path": "../AgatePris.Intar/Extensions",
            "template_name": "OverflowingExtension.cs",
            "files": [
                { "file_name": "OverflowingExtension.gen.cs", "params": {} }
            ]
        },
        {
            "dir_path": "../AgatePris.Intar.Numerics",
            "template_name": "Fixed.cs",
            "files": [
                {%- for i in range(start = 2, end = 32) %}
                { "file_name": "I{{ i }}F{{ 32 - i }}.gen.cs", "params": { "signed": true, "int_nbits": {{ i }}, "frac_nbits": {{ 32 - i }}, "vector_list": {{ vector_list | json_encode() }} } },
                {%- endfor %}
                {%- for i in range(start = 2, end = 32) %}
                { "file_name": "U{{ i }}F{{ 32 - i }}.gen.cs", "params": { "signed": false, "int_nbits": {{ i }}, "frac_nbits": {{ 32 - i }}, "vector_list": {{ vector_list | json_encode() }} } },
                {%- endfor %}
                {%- for i in range(start = 2, end = 64) %}
                { "file_name": "I{{ i }}F{{ 64 - i }}.gen.cs", "params": { "signed": true, "int_nbits": {{ i }}, "frac_nbits": {{ 64 - i }}, "vector_list": {{ vector_list | json_encode() }} } },
                {%- endfor %}
                {%- for i in range(start = 2, end = 64) %}
                { "file_name": "U{{ i }}F{{ 64 - i }}.gen.cs", "params": { "signed": false, "int_nbits": {{ i }}, "frac_nbits": {{ 64 - i }}, "vector_list": {{ vector_list | json_encode() }} } }
                {%- if not loop.last %},{% endif %}
                {%- endfor %}
            ]
        },
        {
            "dir_path": "../AgatePris.Intar.Numerics",
            "template_name": "Vector.cs",
            "files": [
                {%- for v in vector_list %}
                {%- for dim in range(end = 3) %}
                { "file_name": "Vector{{ dim + 2 }}I{{ v[0] }}F{{ v[1] }}.gen.cs", "params": { "dim": {{ dim + 2 }}, "signed": true, "int_nbits": {{ v[0] }}, "frac_nbits": {{ v[1] }}, "fixed": true } }
                {%- if not loop.last %},{% endif %}
                {%- endfor %}
                {%- if not loop.last %},{% endif %}
                {%- endfor %}
            ]
        }
    ]
}
